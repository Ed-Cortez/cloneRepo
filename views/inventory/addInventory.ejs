<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<form action="/inv/addVehicle" method="post" id="new-Inventory">
    <label for="inv_make">Make: </label>
    <input type="text" name="inv_make" id="inv_make" value="<%= locals.inv_make %>" placeholder="Toyota, VolksWagen, Audi, Hyundai, etc" required><br>
    <label for="inv_model">Model: </label>
    <input type="text" name="inv_model" id="inv_model" value="<%= locals.inv_model %>" placeholder="Polo, Jetta, Versa, Chevi etc" required><br>
    <label for="inv_year">Year: </label>
    <input type="text" name="inv_year" id="inv_year" value="<%= locals.inv_year %>" placeholder="1999, 2005, 2015, etc" required><br>
    <label for="inv_description">Description: </label><br>
    <textarea name="inv_description" id="inv_description" placeholder="The cas is excellent for ..." cols=50 rows=5 required><%= locals.inv_description %></textarea><br>
    <label for="inv_image">Image: </label>
    <input type="text" name="inv_image" id="inv_image" value="/images/vehicles/no-image.png" required><br>
    <label for="inv_thumbnail">thumbnail: </label>
    <input type="text" name="inv_thumbnail" id="inv_thumbnail" value="/images/vehicles/no-image-tn.png" required><br>
    <label for="inv_price">Price: </label>
    <input type="number" name="inv_price" id="inv_price" value="<%= locals.inv_price %>" required><br>
    <label for="inv_miles">Mileage: </label>
    <input type="number" name="inv_miles" id="inv_miles" value="<%= locals.inv_miles %>" required><br>
    <label for="inv_color">Color: </label>
    <input type="text" name="inv_color" id="inv_color" value="<%= locals.inv_color %>" required><br>
    <label for="classification_id">Classification: </label>
    <%- dropdown %><br>
    <input type="submit" value="Add New Vehicle" id="submit-button">
</form>